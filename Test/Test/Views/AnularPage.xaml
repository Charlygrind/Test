<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding AnularPageViewModel, Source={StaticResource Locator}}"
             x:Class="Test.Views.AnularPage"
             Title="Anular suscripcion"
             Visual="Material">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Realmene desea anular su suscripcion?" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="Red" FontSize="36"/>
            </Frame>
            <Label Text="Dejara de recibir las noticias mas recientes!" FontSize="Title" Padding="30,10,30,10"/>
            <Button BackgroundColor="#2196F3" HorizontalOptions="Center" VerticalOptions="Center" Text="Anular suscripcion" Command="{Binding AnularCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>